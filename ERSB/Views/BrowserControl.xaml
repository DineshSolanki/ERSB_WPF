<UserControl x:Class="ERSB.Views.BrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <hc:BusyIndicator Name="BusyIndicator1" BusyContent="Working" ProgressBarStyle="{DynamicResource ProgressBarFlat}" TextOptions.TextFormattingMode="Display">
        <hc:BusyIndicator.Content>
            <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Button x:Name="BtnScrap" Style="{StaticResource ButtonPrimary}" DockPanel.Dock="Right" Content="Start Scrapping" Click="BtnScrap_Click"/>
                    <hc:ComboBox x:Name="CmbFileNames" ItemsSource="{Binding FileNames,UpdateSourceTrigger=PropertyChanged}" SelectedIndex="0" DockPanel.Dock="Left"/>
                </DockPanel>
                <wv2:WebView2 Name = "WebView"
                  Source = "https://jnvuiums.in/(S(sthxe5m4byyx0qxscaokkfdx))/Results/ExamResultDeclare.aspx"
                CoreWebView2Ready="webView_CoreWebView2Ready" />
            </DockPanel>
        </hc:BusyIndicator.Content>
    </hc:BusyIndicator>
</UserControl>
